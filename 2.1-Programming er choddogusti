function removeDuplicate(sentence){
    var output = "";

    for(var i = 0; i < sentence.length; i++){
            var letter = sentence[ i ];
            if(output.indexOf(letter) == -1||sentence[i] == " "){
                output = output + letter;
            }
    }
    return output;
}                                                   
    
var s=removeDuplicate(" My name is nayeem islam");
console.log(s);

